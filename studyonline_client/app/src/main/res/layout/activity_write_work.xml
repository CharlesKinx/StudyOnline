<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout

        android:background="#F488A7"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:layout_width="20dp"
            android:layout_height="20dp"/>


        <TextView
            android:id="@+id/write_work_back"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="返回"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/class_course_name"
            android:layout_marginLeft="47dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="提交作业"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/class_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:text="题目："
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20sp"
            android:text="请完成课后习题"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/et_shape"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:textSize="19sp"
            android:background="@null"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:elevation="2dp"
        android:gravity="right"
        android:background="@drawable/class_view"
        android:id="@+id/find_file"
        android:text="添加附件"
        android:textSize="16sp"
        android:textColor="#E6657E"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/file_work"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        android:background="@drawable/class_view"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/word_uri"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/work_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="25"
            android:gravity="right"
            android:id="@+id/work_file_size"
            android:textColor="#F488A7"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <Button
        android:layout_margin="10dp"
        android:text="提 交"
        android:background="@drawable/login_style"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>